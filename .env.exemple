# Configuration Flask
# Générez une clé secrète forte avec: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGEZ_MOI_AVEC_UNE_CLE_SECRETE_FORTE_DE_64_CARACTERES
FLASK_ENV=development
FLASK_DEBUG=True

# Configuration PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=malaria_detection
DB_USER=malaria_user
